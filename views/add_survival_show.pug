doctype

head
        meta(charset = "UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Add a Card
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous")

body
    div(class="container")
        form(action="/shows/add" method="post" enctype="multipart/form-data")
            label(for="name") Title: 
                input#name(type="text", name="name" required)
            br
            label(for="gender") Contestants Gender:
                select#gender(name="gender")
                    option(value="Female") Female
                    option(value="Male") Male
                    option(vale="Both") Both
            br
            label(for="startDate") When did this show start?
                input#startDate(type="date", name="startDate")
            br
            label(for="endDate") When did this show end?
                input#endDate(type="date", name="endDate")
            br
            label(for="network") Which netowrk does is belong to?
                input#network(type="text", name="network")
            br
            label(for="description") Provide a description of the show: 
                input#desciption(type="text", name="description")
            br
            label(for="posterImg") Add a poster for the show
                input#img(type="file", name="posterImg")
            br
            label(for="contestantsNum") Provide the amount of contestants for this show:
                input#contestantsNum(type="number", name="contestantsNum")
            br
            label(for="winnersNum") Provide the amount of winners for this show:
                input#winnersNum(type="number", name="winnersNum")
            br
            label(for="mc") Who's the MC for this show?
                input#mc(type="text", name="mc")
            br
            label(for="episodesNum") Provide the amount of episodes this show has:
                input#episodesNum(type="number", name="episodesNum")
            br
            label(for="winnerName") What's the name of the winning group/soloist of the show?
                input#winnerName(type="text", name="winnerName")
            br
            input(type="submit", value="Submit")
